{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "./build",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["api/**/*", "helpers/**/*", "scripts/**/*", "temp.ts"],
  "exclude": ["node_modules"]
}
